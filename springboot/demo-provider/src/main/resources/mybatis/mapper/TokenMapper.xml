<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.provider.dao.TokenMapper" >
  <resultMap id="BaseResultMap" type="com.example.provider.entity.Token" >
    <result column="user_id" property="userId" jdbcType="VARCHAR" />
    <result column="token" property="token" jdbcType="VARCHAR" />
    <result column="expire_time" property="expireTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="token_type" property="tokenType" jdbcType="BIT" />
  </resultMap>
  <sql id="Base_Column_List">
    user_id,
    token,
    expire_time,
    update_time,
    token_type
  </sql>
  <insert id="insert" parameterType="com.example.provider.entity.Token" >
    insert into tb_token (user_id, token, expire_time, 
      update_time, token_type)
    values (#{userId,jdbcType=VARCHAR}, #{token,jdbcType=VARCHAR}, #{expireTime,jdbcType=TIMESTAMP}, 
      #{updateTime,jdbcType=TIMESTAMP}, #{tokenType,jdbcType=BIT})
  </insert>
  <insert id="insertSelective" parameterType="com.example.provider.entity.Token" >
    insert into tb_token
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="userId != null" >
        user_id,
      </if>
      <if test="token != null" >
        token,
      </if>
      <if test="expireTime != null" >
        expire_time,
      </if>
      <if test="updateTime != null" >
        update_time,
      </if>
      <if test="tokenType != null" >
        token_type,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="userId != null" >
        #{userId,jdbcType=VARCHAR},
      </if>
      <if test="token != null" >
        #{token,jdbcType=VARCHAR},
      </if>
      <if test="expireTime != null" >
        #{expireTime,jdbcType=TIMESTAMP},
      </if>
      <if test="updateTime != null" >
        #{updateTime,jdbcType=TIMESTAMP},
      </if>
      <if test="tokenType != null" >
        #{tokenType,jdbcType=BIT},
      </if>
    </trim>
  </insert>

  <select id="selectByTokenAndType" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tb_token
    where token = #{token}
    and token_type = #{tokenType}
  </select>

  <select id="selectByToken" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tb_token
    where token = #{token}
  </select>
</mapper>